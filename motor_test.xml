<mujoco model="motor_test">
    <!--<compiler angle="degree" coordinate="local" inertiafromgeom="true" />-->
    <option integrator="RK4" timestep="1e-5" />

    <worldbody>
        <light diffuse=".5 .5 .5" pos="0 0 10" dir="0 0 -1"/>
        <!--台座の板（なくても良い）-->
        <body name="stand" pos="0 0 0" euler="0 0 0">
            <geom type="box" size="0.05 0.05 0.0015" rgba="0 1 1 1" pos="0 0 0" mass="1.0"/>
        </body>

        <!--回転する円盤-->>
        <body name="round_disk" pos="0 0 0.005" euler="0 0 0">
            <joint name="disk_joint" type="hinge" axis="0 0 1" limited="false" damping="0.1"/>            
            <geom type="cylinder" size="0.025 0.0025" rgba="0.2 0.2 0.2 0.1" pos="0 0 0" density="2700"/>
            <!--Sensorの取り付け位置-->
            <site name="sensor_mount" type="cylinder" size="0.001 0.00251" pos="0 0 0" rgba="1 0 0 1"/>
            <!--回転がわかりやすいようにマーカー-->
            <site name="maker1" type="cylinder" size="0.006 0.00251" pos=" 0.015 0 0" rgba="0 1 0 1"/>
            <site name="maker2" type="cylinder" size="0.006 0.00251" pos=" 0.0075  0.013  0" rgba="1 1 0 1"/>
            <site name="maker3" type="cylinder" size="0.006 0.00251" pos="-0.0075  0.0130 0" rgba="1 1 0 1"/>
            <site name="maker4" type="cylinder" size="0.006 0.00251" pos="-0.0150  0.0000 0" rgba="1 1 0 1"/>
            <site name="maker5" type="cylinder" size="0.006 0.00251" pos="-0.0075 -0.0130 0" rgba="1 1 0 1"/>
            <site name="maker6" type="cylinder" size="0.006 0.00251" pos=" 0.0075 -0.0130 0" rgba="1 1 0 1"/>
        </body>
    </worldbody>

    <actuator>
        <motor name="motor"  joint="disk_joint"  gear="2.0"/>
    </actuator>
    <sensor>
        <torque name="disk_torque_sensor" site="sensor_mount"/>
        <gyro name="gyro_sensor" site="sensor_mount"/>
    </sensor>

</mujoco>


